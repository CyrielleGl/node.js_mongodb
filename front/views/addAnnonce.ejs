<%- include('partials/head') %>
<%- include('partials/nav') %>

<main>
  <div class="annonces">
    <h1>Ajouter une annonce</h1>

    <form>
      <div class="top-margin">         
        <label for="titre">Titre :</label>
        <input type="text" id="titre" placeholder="Maison 3pcs">
      </div>

      <div class="top-margin">         
        <label for="description" style="vertical-align: top !important;">Description :</label>
        <textarea type="text" id="description" placeholder="Superbe maison vue sur la mer..."></textarea>
      </div>

      <div class="top-margin">         
        <label for="adresse">Adresse :</label>
        <input type="text" id="adresse" placeholder="3 boulevard de la marée">
      </div>

      <div class="top-margin">         
        <label for="code_postal">Code Postal :</label>
        <input type="number" id="code_postal" placeholder="76200">
      </div>

      <div class="top-margin">         
        <label for="ville">Ville :</label>
        <input type="text" id="ville" placeholder="Normanville">
      </div>

      <div class="top-margin">         
        <label for="prix">Prix :</label>
        <input type="number" id="prix" placeholder="2000">
      </div>

      <button type="submit" onclick="createAnnonce()">Créer</button>
    </form>
  </div>
</main>

<%- include('partials/footer') %>